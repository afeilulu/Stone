<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@android:color/background_dark">

    <fragment android:name="com.afeilulu.stone.util.AnimatedMuzeiLogoFragment"
        android:id="@+id/animated_logo_fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:layout="@layout/animated_logo_fragment" />

    <TextView android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#afff"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/settings_text_size_normal" />

    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#1fff" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <TextView android:id="@+id/about_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#afff"
            android:textColorLink="#fff"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/settings_text_size_normal"
            android:lineSpacingMultiplier="1.1" />
    </ScrollView>

</LinearLayout>
